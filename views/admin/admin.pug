//- 后台界面重写
doctype html
html
  head
    title 后台管理
    meta(charset="utf-8")
    meta(name="author", content="fengyu")
    link(rel="stylesheet", href="/layui/css/layui.css")
    link(rel="stylesheet", href="/css/nav.css")
    link(rel="stylesheet", href="/css/admin-nav.css")
    script(src="/layui/layui.js")

    style.
      .layui-body{
        padding: 15px;
        top: 60px;
      }
      .layui-table-fixed.layui-table-fixed-r{
        display:none;
      }
  block css

  body#admin-user
    // 导航
    .blog-header
      .layui-container
        //- 用户登录按钮
        ul.layui-nav.admin-user
          li.layui-nav-item
            a(href="/admin/user",title="侧边伸缩") 
              i.layui-icon.layui-icon-shrink-right
          li.layui-nav-item
            a(href="/admin/user",title="刷新") 
              i.layui-icon.layui-icon-refresh-3
        //- ul.layui-nav.admin-user
        //-   li.layui-nav-item
        //-     a(href="/admin/user",title="侧边伸缩") 侧边伸缩

        ul.layui-nav.admin-user
          li.layui-nav-item
            a(href="/user/logout") 退了
    // 左侧导航
    .layui-side.layui-bg-black
      .layui-side-scroll
        ul(lay-filter="list").layui-nav.layui-nav-tree
          li.layui-nav-item#haha
            a(href="/")
              i.layui-icon.layui-icon-home 
              | 首页
          if role > 1
            li.layui-nav-item
              a(href="/admin/user")
                i.layui-icon.layui-icon-user
                | 用户管理
          li.layui-nav-item
            a(href="/admin/article")
              i.layui-icon.layui-icon-read
              | 文章管理
          li.layui-nav-item
            a(href="/admin/comment")
              i.layui-icon.layui-icon-edit
              | 评论管理
          li.layui-nav-item
            a(href="/admin/userface")
              i.layui-icon.layui-icon-face-smile-fine
              | 头像上传
    // 后台管理主体部分
    .layui-body
      block main
    
    script.
      layui.use('element', function(){
        var element = layui.element;
        const $ = layui.$

        $("a").each((i, v) => {
          const a_href = $(v).prop('href')
          if(a_href === location.href){
            $('li').eq(i).addClass("layui-this")
          }          
        })
      });